@model IEnumerable<MyCBA.Core.Models.GlAccount>

@{
    ViewBag.Title = "View Existing GL Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
    MyCBA.Core.Models.ApplicationDbContext _context = new MyCBA.Core.Models.ApplicationDbContext();

}
@if (TempData["Message"]!=null)
{
    if (TempData["Message"].ToString() == "Success")
    {
    <div class="alert alert-success">
        <p>@TempData["Message"] <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> </p>

    </div>

    }
}
<p>
    @Html.ActionLink("Add new GL Account", "Create")
</p>
<table class="table table-hover table-responsive table-condensed" id="glaccount">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GlCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.acountBalance)
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            var getBranch = _context.Branches.Find(item.BranchId);
            var getGlCategory = _context.GlCategories.Find(item.GlCategoryId);

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @getGlCategory.name
                </td>
                <td>
                    @getBranch.name
                </td>
                <td>
                    @item.acountBalance.ToString("N02")
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) @*|
                        @Html.ActionLink("Delete", "Delete", new { id=item.id })*@
                </td>
            </tr>
        }
    </tbody>


</table>
@section ViewSpecificJavascript
    {
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $(".alert").fadeOut(100, null);
            },
                3000);
        });
        $("#glaccount").dataTable();

    </script>

}